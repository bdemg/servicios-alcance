<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uady.jorge_cano.serviciosatualcance.StartActivity"
    android:background="@color/background"
    tools:showIn="@layout/app_bar_start">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/electricity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                app:srcCompat="@drawable/electricista"
                android:layout_marginBottom="@dimen/horizontal_table_padding"
                android:layout_marginRight="@dimen/vertical_table_padding"
                android:onClick="searchElectricityCategory"/>

            <ImageView
                android:id="@+id/gardening_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontal_table_padding"
                android:layout_marginLeft="@dimen/vertical_table_padding"
                android:background="@android:drawable/dialog_holo_light_frame"
                app:srcCompat="@drawable/jardineria"
                android:onClick="searchGardeningCategory"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wood_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                app:srcCompat="@drawable/carpinteria"
                android:layout_marginTop="@dimen/horizontal_table_padding"
                android:layout_marginRight="@dimen/vertical_table_padding"
                android:onClick="searchWoodCategory"/>

            <ImageView
                android:id="@+id/piping_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                app:srcCompat="@drawable/plomeria"
                android:layout_marginTop="@dimen/horizontal_table_padding"
                android:layout_marginLeft="@dimen/vertical_table_padding"
                android:onClick="searchPipingCategory"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
